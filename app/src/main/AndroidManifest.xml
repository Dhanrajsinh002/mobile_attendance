<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileattendance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".datafile"
            android:parentActivityName=".sub_UI"/>
        <activity
            android:name=".about"
            android:parentActivityName=".sub_UI" />
        <activity
            android:name=".update_student"
            android:parentActivityName=".sub_UI" />
        <activity
            android:name=".delete_student"
            android:parentActivityName=".sub_UI" />
        <activity
            android:name=".add_student"
            android:parentActivityName=".sub_UI" />
        <activity
            android:name=".StudentAttendance"
            android:parentActivityName=".sub_UI" />
        <activity
            android:name=".sub_UI"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>