<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkSpace</item>
        <item name="colorPrimaryDark">@color/Forest_Green</item>
    </style>

    <style name="PrimaryButton" >
        <item name="colorButtonNormal">@color/Forest_Green</item>
    </style>

    <style name="Progress">
        <item name="android:progressBarStyleLarge">@color/Gray_Cloud</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparentBlack</item>
    </style>
</resources>