<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wguidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/vguidLine"
        app:layout_constraintTop_toBottomOf="@id/guidLine"
        app:srcCompat="@drawable/at"
        app:tint="@color/Gray_Cloud" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="101dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/vguidLine"
        app:layout_constraintTop_toBottomOf="@id/guidLine"
        app:srcCompat="@drawable/uncheck"
        app:tint="@color/Gray_Cloud" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="101dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/vguidLine"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:srcCompat="@drawable/check"
        app:tint="@color/Gray_Cloud" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="101dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/vguidLine"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:srcCompat="@drawable/uncheck"
        app:tint="@color/Gray_Cloud" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:padding="20dp"
        android:theme="@style/Progress"
        app:layout_constraintTop_toBottomOf="@id/wguidLine" />


</androidx.constraintlayout.widget.ConstraintLayout>